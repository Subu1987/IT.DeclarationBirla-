<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" controllerName="IT.DeclarationBirla.controller.Main">
	<Page title="Income From Other Sources" id="OtherSources">
		<content>
			<VBox width="40%" id="__vbox0" direction="Row" alignContent="Start" alignItems="Center" wrap="Wrap" justifyContent="SpaceAround">
				<Label text="From"/>
				<Input value=""/>
				<Label text="To"/>
				<Input value=""/>
			</VBox>
			<VBox width="100%" direction="Column" id="__vbox3">
				<f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1">
					<f:layout>
						<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
							emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer title="Income From Other Sources">
							<f:formElements>
								<f:FormElement label="Business profits">
									<f:fields>
										<Input value="" id="url"/>
										<Text text="INR"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
							<f:formElements>
								<f:FormElement label="Long Term Capital Gains">
									<f:fields>
										<Input value="" id="urla"/>
										<Text text="INR"/>
										<Text text="Normal Rate"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
							<f:formElements>
								<f:FormElement label="Long Term Capital Gains">
									<f:fields>
										<Input value="" id="urla1"/>
										<Text text="INR"/>
										<Text text="Special Rate"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
							<f:formElements>
								<f:FormElement label="Short Term Capital Gains">
									<f:fields>
										<Input value=""/>
										<Text text="INR"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
							<f:formElements>
								<f:FormElement label="Short Term Capital Gains">
									<f:fields>
										<Input value=""/>
										<Text text="INR"/>
										<Text text="Listed Securities"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
							<f:formElements>
								<f:FormElement label="Income from Dividend">
									<f:fields>
										<Input value="" id="urla10"/>
										<Text text="INR"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
							<f:formElements>
								<f:FormElement label="Income from Interest">
									<f:fields>
										<Input value=""/>
										<Text text="INR"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
							<f:formElements>
								<f:FormElement label="Other Income(Unspecified)">
									<f:fields>
										<Input value=""/>
										<Text text="INR"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
							<f:formElements>
								<f:FormElement label="TDS on Other Income">
									<f:fields>
										<Input value=""/>
										<Text text="INR"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>
		</content>
		<!--footer for close button-->
		<footer>
			<Bar>
				<contentRight>
					<Button text="Save" visible="{=${FormDataModel>/displayMode} !== 'D'}" press="onSalesOrderSave"/>
					<Button text="Close" visible="{=${FormDataModel>/displayMode} === 'D'}" press="onClose"/>
					<Button text="Display" visible="{=${FormDataModel>/displayMode} !== 'D'}" press="onSalesOrderDisplay"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>